@model Derivco.Orniscient.Viewer.Models.Connection.ConnectionInfo

<div class="container" class="container center-block" style="width:400px; margin-top: 20px;">
    @using (Html.BeginForm("Index", "Connection", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Address)
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Port)
            @Html.TextBoxFor(m => m.Port, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">Connect</button>
        </div>
        <div class="form-group">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    <p style="color: #a94442;">@ViewBag.Error</p>
                </div>
            }
        </div>
    }
</div>